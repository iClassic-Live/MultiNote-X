/* 启动页 */

#background {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: -1;
  background-color: #000;
}
 #background swiper {
  height: 100%;
  width: 100%;
}#background swiper-item {
  height: 100%;
  width: 100%;
}
#background image {
  height: 100%;
  width: 100%;
} 

#mainFn {
  position: absolute;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.module {
  height: 100%;
  display: flex;
  align-items: center;
}
.logo image {
  position: relative;
  top: 5vh;
  height: 40vw;
  width: 40vw;
}
.startUsing image {
  position: relative;
  top: 5vh;
  height: 20vw;
  width: 46vw;
}
.motto image {
  position: relative;
  top: 2.5vh;
  height: 9vw;
  width: 96vw;  
}
.versionSign {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 0 0.5em;
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.25);
}